---
// PretrainingComparison.astro - Side-by-side comparison of models with and without pretraining

const comparisons = [
  {
    robot: "Go1 Quadruped",
    task: "Walk Straight",
    withPre: "/demos/go1_pre_4models.mp4",
    withoutPre: "/demos/go1_wopre_4models.mp4",
  },
  {
    robot: "Hopper",
    task: "Hop Forward",
    withPre: "/demos/hopper_pre_4models.mp4",
    withoutPre: "/demos/hopper_wopre_4models.mp4",
  },
  {
    robot: "Walker2D",
    task: "Walk Forward",
    withPre: "/demos/walker2d_pre_4models.mp4",
    withoutPre: "/demos/walker2d_wopre_4models.mp4",
  },
];
---

<div class="pretraining-comparison">
  <h3 class="section-title-left">Pretraining Yields Largest Gains for WestWorld</h3>

  {comparisons.map((comp) => (
    <div class="comparison-block">
      <h3 class="robot-title">{comp.robot} <span class="task-label">({comp.task})</span></h3>

      <div class="video-comparison-vertical">
        <!-- Without Pretraining Row -->
        <div class="video-row">
          <div class="row-label without">Without Pretraining</div>
          <div class="video-wrapper">
            <video autoplay loop muted playsinline>
              <source src={comp.withoutPre} type="video/mp4" />
            </video>
          </div>
        </div>

        <!-- With Pretraining Row -->
        <div class="video-row">
          <div class="row-label with">With Pretraining</div>
          <div class="video-wrapper">
            <video autoplay loop muted playsinline>
              <source src={comp.withPre} type="video/mp4" />
            </video>
          </div>
        </div>
      </div>
    </div>
  ))}
</div>

<style>
  :global(.pretraining-section .section-container) {
    max-width: 1400px;
  }

  .section-title-left {
    font-size: 1.75rem;
    font-weight: 600;
    color: #2a2f6c;
    margin: 0 0 2rem 0;
    text-align: left;
  }

  .pretraining-comparison {
    margin-top: 0;
  }

  .comparison-block {
    margin-bottom: 2.5rem;
  }

  .comparison-block:last-child {
    margin-bottom: 0;
  }

  .robot-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2a2f6c;
    margin: 0 0 1rem 0;
    text-align: left;
  }

  .task-label {
    font-weight: 400;
    color: #666;
    font-size: 1.1rem;
  }

  /* Vertical video comparison layout */
  .video-comparison-vertical {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .video-row {
    display: flex;
    align-items: stretch;
  }

  .row-label {
    width: 140px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
    font-weight: 600;
    color: white;
    padding: 0.5rem;
    border-radius: 8px 0 0 8px;
    writing-mode: horizontal-tb;
  }

  .row-label.without {
    background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
  }

  .row-label.with {
    background: linear-gradient(135deg, #2a2f6c 0%, #3f4d91 100%);
  }

  .video-wrapper {
    flex: 1;
    background: #1a1a2e;
    border-radius: 0 8px 8px 0;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }

  .video-wrapper video {
    width: 100%;
    display: block;
  }

  @media (max-width: 768px) {
    .video-row {
      flex-direction: column;
    }

    .row-label {
      width: 100%;
      border-radius: 8px 8px 0 0;
    }

    .video-wrapper {
      border-radius: 0 0 8px 8px;
    }
  }
</style>
